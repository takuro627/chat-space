.main-chat__list__message{data: {message: {id: message.id}}}
  .main-chat__list__message__upper
    .main-chat__list__message__upper__user-name
      = message.user.name
    .main-chat__list__message__upper__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main-chat__list__message__lower
    - if message.content.present?
      %p.main-chat__list__message__lower__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?